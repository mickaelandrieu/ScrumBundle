{% set priority = story.priority %}
{% set story = story[0] %}
<div class="story bgStatus{{ story.status.id }}">
    <div class="floatL" >
    <a href="{{ path('scrum_story_show',{'id_project':id_project,'id':story.id }) }}">{{ story.name }}</a>
    
    {% if story.assignedAt %}
            ({{ story.assignedAt.username }})
        {% endif %}
    </div>
    <div class="floatR" >
    {% if status is defined %}
        {% include 'NicoBScrumBundle:Dashboard:status.html.twig' %}    
    {% endif %}
    
    {{ priority | number_format(1) }}

    </div>
    <div class="clear">
        
        
    </div>

</div>