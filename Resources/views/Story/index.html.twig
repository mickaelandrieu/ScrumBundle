{% extends 'NicoBScrumBundle::layout.html.twig' %}


{% block content %}

<h1>Story list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Createdat</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('story_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('story_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('story_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('story_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}