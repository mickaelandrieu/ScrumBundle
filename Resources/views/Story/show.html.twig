{% extends 'NicoBScrumBundle::layout.html.twig' %}


{% block content %}

<h1>Story</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('story') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('story_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a class="btn btn-danger" href="{{ path('story_delete',{'id':entity.id}) }}">Delete</a>
    </li>
</ul>
{% endblock %}